#!/bin/bash

# Check for required arguments
if [ $# -ne 2 ]; then
  echo "Usage: $0 <directory> <leader_name>"
  exit 1
fi

dir=$1
leader_name=$2
count=1

# Loop through each file in the directory
for f in "$dir"/*; do
  if [ -f "$f" ]; then
    ext="${f##*.}"  # Extract file extension
    new_name="${leader_name}_$(printf "%03d" $count).${ext}"
    mv "$f" "$dir/$new_name"
    ((count++))
  fi
done
